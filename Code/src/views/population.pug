extends layout.pug

block appContent
  title Population

  h2 Population of All Countries
  form(action="/allPopulation", method="GET")
    button(type="submit" name="sort" value="asc") Sort Ascending
    button(type="submit" name="sort" value="desc") Sort Descending

  table(border="1")
    thead
      tr
        th Continent
        th Country
        th Population
    tbody
      each country in populationData
        tr
          td= country.Continent
          td= country.Country
          td= country.Population
